@model Harvin.Models.HistoricoCompraSaldo
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <!--Import Google Icon Font-->
    <link href="~/content/materialize/css/materialize.min.css" rel="stylesheet" />
    <link href="~/content/style.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link href="https://fonts.googleapis.com/css?family=Josefin+Sans" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="vegas/vegas.min.css">
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>

<body class="BodySaldo">

    <section id="Cadastrar">
        <div class="container">
            <div class="row">
                <!--ESPAÇAMENTO-->
                <div class="col s12 m12 l7">
                    <br />
                </div>

                <!--FORMULARIO DE SALDO-->
                <div class="col s12 m12 l5 ">
                    <a href="@Url.Action("Index")"><h1>Harvin</h1></a>

                    @using (Html.BeginForm()) {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-red" })

                        <h5>Comprar Saldo</h5>

                        <label>Insira o valor a ser comprado</label>
                        @Html.EditorFor(model => model.SaldoUsuario, new { @type = "number", @min = "0", @step = "0.1"})

                        <label>Nome Completo no Cartão</label>
                        @Html.EditorFor(model => model.NomeCompletoCartao)

                        <label>Número do Cartão</label>
                        @Html.EditorFor(model => model.NumeroCartao)

                        <label>Bandeira</label>
                        @Html.EditorFor(model => model.BandeiraCartao)

                        <label>Código de Segurança</label>
                        @Html.EditorFor(model => model.CodigoSegurancaCartao)

                        <br /><br />
                        <input type="submit" name="btnCadastrar" value="Comprar Saldo" class="btn">


                    }
                </div>
            </div>
        </div>
    </section>


    <!--Import jQuery before materialize.js-->
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="materialize/js/materialize.min.js"></script>


</body>
</html>
