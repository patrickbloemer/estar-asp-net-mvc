@model Harvin.Models.Automovel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/TemplateForms.cshtml";

}

<h2>Remover</h2>
<h4>Automovel</h4>
<h3>Você tem certeza disso?</h3>
<div>
    <table class="table">

        <tr>
            <th>@Html.DisplayNameFor(model => model.AutomovelMarca)</th>
            <th>@Html.DisplayNameFor(model => model.AutomovelModelo)</th>
            <th>@Html.DisplayNameFor(model => model.AutomovelAno)</th>
            <th>@Html.DisplayNameFor(model => model.AutomovelCor)</th>
            <th>@Html.DisplayNameFor(model => model.AutomovelPlaca)</th>
            <th>@Html.DisplayNameFor(model => model.AutomovelRenavan)</th>
        </tr>
        <tr>
            <td>@Html.DisplayFor(model => model.AutomovelMarca)</td>
            <td>@Html.DisplayFor(model => model.AutomovelModelo)</td>
            <td>@Html.DisplayFor(model => model.AutomovelAno)</td>
            <td>@Html.DisplayFor(model => model.AutomovelCor)</td>
            <td>@Html.DisplayFor(model => model.AutomovelRenavan)</td>
        </tr>
    </table>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @ViewBag.Mensagem
            <input type="submit" value="Remover" class="btn btn-default" /> 
            @Html.ActionLink("Voltar para Seus Veículos", "SeusVeiculos")
        </div>
    }
</div>
