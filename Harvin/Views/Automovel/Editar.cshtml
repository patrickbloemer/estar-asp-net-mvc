@model Harvin.Models.Automovel

@{
    ViewBag.Title = "Editar - Automóvel";
    Layout = "~/Views/Shared/TemplateForms.cshtml";

}

<h2>Editar</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Automovel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AutomovelId)

        <div class="form-group">
            @Html.LabelFor(model => model.AutomovelMarca, htmlAttributes: new { @class = "control-label col-md-2" })
