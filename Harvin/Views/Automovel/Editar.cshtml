                @Html.ValidationMessageFor(model => model.AutomovelRenavan, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Editar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Todos os Seus Carros", "SeusVeiculos")
</div>
